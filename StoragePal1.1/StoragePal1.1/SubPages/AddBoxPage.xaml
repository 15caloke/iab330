<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StoragePal1.SubPages.AddBoxPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add Box" />
            <Entry x:Name="boxNumber" AutomationId="boxNumber" Keyboard="Numeric" Text="{Binding Number}" />
            <Entry x:Name="boxCategory" AutomationId="boxCategory" 
                   Placeholder="Category" Text="{Binding Category}" />
            <!-- Use Later: <Entry x:Name="boxQRCode" AutomationId="boxQRCode" Text="{Binding qrCode}" />-->
            <Button x:Name="submitBox" AutomationId="submitBox" 
                    Clicked="SubmitBox_Clicked" Command="{Binding SubmitBoxCommand}"
                    Text="Add Box"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>