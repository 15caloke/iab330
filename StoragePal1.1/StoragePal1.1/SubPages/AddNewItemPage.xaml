<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="StoragePal1.SubPages.AddNewItemPage"    
    Title="Add Item"
    NavigationPage.HasNavigationBar="True">
    <ContentPage.Content>

        <StackLayout VerticalOptions="CenterAndExpand" Padding="30,0">
            <Entry x:Name="itemName"
            AutomationId="itemName"
            Text="{Binding Name}"
            HorizontalTextAlignment="Center" Placeholder="ITEM NAME"/>

            <Entry x:Name="itemDescription"
            AutomationId="itemDescription"
            Text="{Binding Description}"
            HorizontalTextAlignment="Center" Placeholder="DESCRIPTION" HeightRequest="100"/>

            <Entry x:Name="boxNumber" 
            AutomationId="boxNumber"
            Text="{Binding BoxNumber}"
            Keyboard="Numeric"
            Placeholder="BOX NUMBER"
            HorizontalTextAlignment="Center"/>

            <Button x:Name="ToSubmit" Text="Submit" TextColor="Orange" 
            Font="20" Clicked="ToSubmit_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
