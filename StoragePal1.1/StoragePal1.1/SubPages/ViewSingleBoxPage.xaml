<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StoragePal1.SubPages.ViewSingleBoxPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="titleLabel" Text="Your Boxes" />
            <Entry x:Name="boxNameSingle" Text="{Binding Number}" Keyboard="Numeric" />
            <Entry x:Name="boxCategorySingle" Text="{Binding Category}" />
            <Button x:Name="saveChangesButton" CommandParameter="{Binding .}" Text="Save Changes" Clicked="SaveChangesButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>