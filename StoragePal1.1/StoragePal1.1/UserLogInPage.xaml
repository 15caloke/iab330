<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="StoragePal1.UserLogInPage"
    NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Spacing="20" Padding="30,0">
            <!-- Logo and images-->
            <Label Text= "StoragePal" 
            FontFamily= "Helvetica"
            VerticalTextAlignment= "Center"
            HorizontalTextAlignment= "Center" 
            Font= "Bold" 
            FontSize= "30"
            VerticalOptions= "EndAndExpand"
            HorizontalOptions="CenterAndExpand"
            TextColor= "Orange"/>

            <Image x:Name= "StoragePalButton" Source="SP_Logo_1387.png"
              WidthRequest="150" 
              HeightRequest="150"
              VerticalOptions= "CenterAndExpand"
              HorizontalOptions="CenterAndExpand"/>

            <Label  x:Name= "ErrorMessage"
            Text= "" 
            FontFamily= "Helvetica"
            VerticalTextAlignment= "Center"
            HorizontalTextAlignment= "Center" 
            Font= "Bold" 
            FontSize= "20"
            VerticalOptions= "EndAndExpand"
            HorizontalOptions="CenterAndExpand"
            TextColor= "Red"/>

            <!-- User Entries -->
            <Entry x:Name="usernameEntry"
            AutomationId="usernameEntry"
            Text="{Binding Username}"
            Placeholder="Username"
            HorizontalTextAlignment="Center" />

            <Entry x:Name="passwordEntry"
            AutomationId="passwordEntry"
            Text="{Binding Password}"
            Placeholder="Password" 
            IsPassword="true" 
            HorizontalTextAlignment="Center" />

            <Button Text="Login" 
            Clicked="TempLoginClicked"
            CommandParameter="{Binding .}" />

            <Button Text="New User? Sign Up"
            Clicked="OnSignUpButtonClicked"/>

            <Label x:Name="messageLabel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
